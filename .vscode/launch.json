{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ”§ Launch Backend (C#)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "${workspaceFolder}/backend/bin/Debug/net8.0/LLMPodcastAPI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5101;http://localhost:5100"
      }
    },
    {
      "name": "ğŸš€ Start Frontend Only",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "ğŸŒ Launch Frontend in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome_debug_data",
      "timeout": 30000
    },
    {
      "name": "ğŸ¯ Launch Full Stack (Recommended)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/start.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Full Stack Development (Manual)",
      "configurations": ["ğŸ”§ Launch Backend (C#)", "ğŸš€ Start Frontend Only"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ]
}
