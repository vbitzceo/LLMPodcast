{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-backend",
      "type": "shell",
      "command": "dotnet",
      "args": ["build"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "install-frontend-deps",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "restore-backend-deps",
      "type": "shell",
      "command": "dotnet",
      "args": ["restore"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "start-full-stack",
      "dependsOrder": "parallel",
      "dependsOn": ["start-backend", "start-frontend"]
    },
    {
      "label": "start-backend",
      "type": "shell",
      "command": "dotnet",
      "args": ["run"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "csharp",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(\\w+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*info: Microsoft.Hosting.Lifetime",
          "endsPattern": "^\\s*info: Microsoft.Hosting.Lifetime.*Application started\\."
        }
      }
    },
    {
      "label": "start-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "âžœ",
          "endsPattern": "ready"
        }
      }
    },
    {
      "label": "dev-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "instanceLimit": 1
      }
    }
  ]
}
